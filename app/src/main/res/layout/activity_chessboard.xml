<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chessboard_main"
    android:windowNoTitle="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/chinastyle1" >

    <LinearLayout
        android:id="@+id/upper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="65"
            android:orientation="horizontal"
            android:background="@mipmap/boardbackground_title" >

            <TextView
                android:id="@+id/step"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="90dp"
                android:text="Step"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_backgruound_muisc"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:background="@mipmap/button_bmusic_enable"
                android:clickable="true"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="360"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/chessboard_left_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="17"
                android:orientation="vertical"
                android:background="@mipmap/boardbackground_left_border" >
            </ImageView>

            <RelativeLayout
                android:id="@+id/chessboard_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_weight="288"
                android:orientation="vertical"></RelativeLayout>

            <ImageView
                android:id="@+id/chessboard_right_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@mipmap/boardbackground_right_border"
                android:orientation="vertical"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:orientation="horizontal"
            android:background="@mipmap/boardbackground_bottom" >
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/downer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:windowIsTranslucent="true"
        android:orientation="vertical" >
    </LinearLayout>
</LinearLayout>
